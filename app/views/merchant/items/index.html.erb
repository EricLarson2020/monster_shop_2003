<h1>Merchant Items</h1>

<% @items.each do |item| %>
  <div class="item-<%= item.id %>">
    <h2><%= item.name %></h2>
    <img src = "<%= item.image %>" alt:="<%= item.name %>" <br/>
    <p>Description: <%= item.description %></p>
    <p>Price: $<%= item.price %></p>
    <p>Inventory: <%= item.inventory %></p>
  
    <% if item.active? %>
      <p>Status: Active </p>
      <%= button_to "Deactivate Item", "/merchant/items/#{item.id}"%>
    <% else %>
      <p>Status: Inactive </p>
      <%= button_to "Activate Item", "/merchant/items/#{item.id}"%>

    <% end %>
    <% if item.no_orders? %>
        <%= link_to  "Delete Item", "/merchant/items/#{item.id}", method: :delete, data: {confirm: "Confirm Item Deletion"} %></br>
    <% end %>

    </ div>
  <% end %>