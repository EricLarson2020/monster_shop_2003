<h1>Order: <%=@order.id%></h1>
<ul>
  <li><strong>Creation Date: <%=@order.created_at %></strong></li>
  <li><strong>Last Updated: <%=@order.updated_at %></strong></li>
  <% if @order.status == "fulfilled" %>
    <li><strong>Current Status: <%="Packaged"%></strong></li>
    <% else %>
  <li><strong>Current Status: <%=@order.status.capitalize %></strong></li>
  <% end %>
</ul>

<% @order.items.each do |item| %>
<section class = "item-<%=item.id%>">
<ul>
  <li><%= item.name %></li>
  <li><%= item.description %></li>
  <li><%= item.image %></li>
  <li><strong>Item Quantity: <%= item.quantity %></strong></li>
  <li><%= item.price %></li>
  <li><strong> Item Subtotal: $<%= item.subtotal %> </strong></li>
</ul>
</section>
  <% end %>
<ul>
  <li><strong>Total Quantity: <%=@order.total_quantity%> </strong></li>
  <li><strong>Grand Total: $<%=@order.grandtotal%> </strong></li>
</ul>
