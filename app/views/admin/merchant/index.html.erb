


<%=@merchant.each do |merchant| %>
<section class="merchant-<%=merchant.id%>">
  <strong>Merchant Status: <%= merchant.status %></strong>
  <% if merchant.status != "disabled" %>
    <%= button_to "disable", "/admin/merchants/#{merchant.id}/update", method: :patch %>
  <% end %>
<% end %>

<%=@merchant.items.each do |item| %>
<section class="item-<%=item.id%>">
  <strong>Item Active?: <%=item.status%></strong>
  <% if item.active?
    <% end %>
