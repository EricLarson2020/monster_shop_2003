
<%=@merchants.each do |merchant| %>
<section class="merchant-<%=merchant.id%>">
  <%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %>
  <p><%= "#{merchant.city}" %>, <%= "#{merchant.state}" %></p>

  <strong>Merchant Status: <%= merchant.status %></strong>
  <% if merchant.status != "disabled" %>
    <%= button_to "disable", "/admin/merchants/#{merchant.id}", method: :patch %>
    <% else %>
    <%= button_to "enable", "/admin/merchants/#{merchant.id}", method: :patch %>
  <% end %>

  <%=merchant.items.each do |item| %>
    <section class="item-<%=item.id%>">
      <strong>Item Active?: <%=item.active?%></strong>
    </section>
  <% end %>
<% end %>
